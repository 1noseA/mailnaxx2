<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mailnaxx2.mapper.DocumentsMapper">

    <!-- 登録 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="documentId">
        INSERT INTO documents
        (
            file_name,
            display_name,
            file_data,
            display_order,
            created_by,
            created_at
        )
        VALUES
        (
            #{fileName},
            #{displayName},
            #{fileData},
            #{displayOrder},
            #{createdBy},
            CURRENT_TIMESTAMP
        )
    </insert>

    <!-- 複数件排他ロック -->
    <select id="forLockByIdList" resultMap="documentMap">
        SELECT
            document_id,
            file_name,
            display_name,
            file_data,
            display_order,
            deleted_flg
        FROM documents
        WHERE
            document_id IN
            <foreach item="item" index="index" collection="idList"
                open="(" separator="," close=")">
                #{item}
            </foreach>
        FOR UPDATE
    </select>

    <!-- 論理削除 -->
    <update id="delete">
        <foreach collection="documentList" item="d" separator=";">
            UPDATE documents SET
                deleted_flg = '1',
                updated_by = #{d.updatedBy},
                updated_at = CURRENT_TIMESTAMP
            WHERE
                document_id = #{d.documentId}
        </foreach>
    </update>

    <!-- 一覧取得 -->
    <select id="findAll" resultMap="documentMap">
        SELECT
            document_id,
            display_name,
            display_order
        FROM documents
        WHERE
            deleted_flg = '0'
        ORDER BY display_order, document_id
    </select>

    <!-- 1件取得 -->
    <select id="findById" resultMap="documentMap">
        SELECT
            document_id,
            file_name,
            display_name,
            file_data
        FROM documents
        WHERE
            deleted_flg = '0'
        AND document_id = #{documentId}
    </select>

    <!-- 表示順最大値取得 -->
    <select id="getMaxDisplayOrder">
        SELECT
            MAX(display_order)
        FROM documents
        WHERE
            deleted_flg = '0'
    </select>

    <!-- 表示順取得 -->
    <select id="getSameDisplayOrder">
        SELECT
            COUNT(*)
        FROM documents
        WHERE
            deleted_flg = '0'
        AND display_order = #{displayOrder}
    </select>

    <!-- マッピング -->
    <resultMap id="documentMap" type="com.mailnaxx2.entity.Documents">
        <result property="documentId" column="document_id" />
        <result property="fileName" column="file_name" />
        <result property="displayName" column="display_name" />
        <result property="fileData" column="file_data" />
        <result property="displayOrder" column="display_order" />
        <result property="deletedFlg" column="deleted_flg" />
        <result property="createdBy" column="created_by" />
        <result property="createdAt" column="created_at" />
        <result property="updatedBy" column="updated_by" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>
</mapper>